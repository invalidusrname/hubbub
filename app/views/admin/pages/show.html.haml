- content_for :title, "Pages - #{@page.title}"
- content_for :meta do
  %strong Status:
  = @page.published? ? 'Published' : 'Draft'
  %strong Created:
  = @page.created_at && @page.created_at.to_s(:long_ordinal)
  %strong Last Updated:
  = @page.updated_at && @page.updated_at.to_s(:long_ordinal)
- content_for :action_bar do
  = link_to 'edit', edit_admin_page_path(@page)
  |
  = link_to 'delete', admin_page_path(@page), :method => :delete, :confirm => "Are you sure? You might miss it when it's gone."

.html= @page.body_html